generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Coupon {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  code       String
  type       String
  value      Int
  created_at DateTime? @default(now())
  expires_at DateTime
  active     Boolean
  uses_count Int?
  max_uses   Int?

  @@map("Coupons")
}
